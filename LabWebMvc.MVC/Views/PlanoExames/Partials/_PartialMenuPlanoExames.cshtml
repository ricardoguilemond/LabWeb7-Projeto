@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MyAssembly
@using BLL
@using static BLL.UtilBLL
<div class="groupButtton">
    @if (!PartialFiltro.Esconde)
    {
        <button class="myButton">
            <a asp-action=@PartialFiltro.ActionButton asp-controller=@PartialFiltro.ControllerButton><i class="fa-sharp fa-solid fa-square-plus"></i> Incluir Itens de Exame</a>
        </button>
    }
    @if (PartialFiltro.Esconde)
    {
        <button class="myButton">
            <a asp-action=@PartialFiltro.Action asp-controller=@PartialFiltro.Controller><i class="fa-sharp fa-solid fa-table-list"></i> Consultar</a>
        </button>
    }
</div>