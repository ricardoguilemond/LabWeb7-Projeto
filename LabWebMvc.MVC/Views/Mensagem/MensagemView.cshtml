@{
    Layout = "_Layout";
    var sucesso = ViewData["Sucesso"] as bool?;
    var icon = sucesso == true
        ? "<span><img src='../images/icones/success-icon.png' width='20%' /></span>"
        : sucesso == null
            ? "<span><img src='../images/icones/attention-icon.png' width='20%' /></span>"
            : "<span><img src='../images/icones/error-icon.png' width='20%' /></span>";
}
<!-- Trigger/Open The Modal (pop up) -->
<div id="myModal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Html.Raw(icon) @ViewData["TituloModal"]</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="modal-x" aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="col-lg">
                    <div class="rounded pg-3 alert-success">
                        <p class="text-left">@ViewData["MensagemModal"]</p>
                        <p class="text-left">Bla Bla Bla</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                @*<button type="button" class="mySalvar btn btn-primary">Save changes</button>*@
                <button type="button" class="myFechar btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<!-- Meu JS (sempre no final) para poder renderizar junto com a página -->
<script src="@Url.Content("~/js/site.js")" type="text/javascript"></script>
<!-- Fim da página do Modal -->
