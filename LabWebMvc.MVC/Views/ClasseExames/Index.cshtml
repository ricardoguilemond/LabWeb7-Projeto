@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MyAssembly
@using BLL
@using static BLL.UtilBLL
@using LabWebMvc.MVC.Interfaces
@using LabWebMvc.MVC.ViewModel
@model vmClasseExames
<partial name='Partials/_PartialMenuClasseExames' />
<div class="table-responsive">
    <table id="modeloTable" name="datatable" data-order='[[ 0, "desc" ]]' class="display compact order-column stripe table-hover nowrap">
        <thead>
            <tr>
                <th>Id</th>
                <th>MHI</th>
                <th>Folha de Exames</th>
                <th>Lab.Externo</th>
                <th>Qde.Etiquetas/Tubos</th>
                <th>Tipo de Mapa de Trabalho</th>
                <th>Ass[1]</th>
                <th>Ass[2]</th>
                <th>Ass[3]</th>
                <th>Ass[4]</th>
                <th>Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in ViewBag.ListaDados)
            {
                @Html.Raw(
                         "<tr>" +
                         "<td style='width: 03%;'>" + item.Id + "</td>" +
                         "<td style='width: 03%;'>" + item.MHI + "</td>" +
                         "<td style='width: 10%;'>" + item.RefExame + "</td>" +
                         "<td style='width: 05%;'>" + item.LaboratorioExterno + "</td>" +
                         "<td style='width: 02%;'>" + item.Etiquetas + "</td>" +
                         "<td style='width: 07%;'>" + item.GetMapaTrabalho + "</td>" +
                         "<td style='width: 02%;'>" + item.GetAssinatura1 + "</td>" +
                         "<td style='width: 02%;'>" + item.GetAssinatura2 + "</td>" +
                         "<td style='width: 02%;'>" + item.GetAssinatura3 + "</td>" +
                         "<td style='width: 02%;'>" + item.GetAssinatura4 + "</td>")
                ;
                @Html.Raw(
                         "<td class='grid_fundo_opcoes'>" +
                         "<a id=" + item.Id + " class='grid_itens' onclick=clickConsulta(this) title='Consultar'><i class='fa-sharp fa-solid fa-display'></i> </a>" +
                         "<a id=" + item.Id + " class='grid_itens' onclick=clickAlterar(this) title='Alterar'><i class='fa-sharp fa-solid fa-file-pen'></i> </a>" +
                         "<a id=" + item.Id + " class='grid_itens' onclick=clickDelete(this) title='Excluir'><i class='fa-sharp fa-solid fa-trash-can'></i> </a>" +
                         "</td>" +
                         "</tr>")
                ;
            }
        </tbody>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>MHI</th>
                <th>Folha de Exames</th>
                <th>Lab.Externo</th>
                <th>Qde.Etiquetas/Tubos</th>
                <th>Tipo de Mapa de Trabalho</th>
                <th>Ass[1]</th>
                <th>Ass[2]</th>
                <th>Ass[3]</th>
                <th>Ass[4]</th>
                <th id="op">Opções</th>
            </tr>
        </tfoot>
    </table>
</div>
@section Scripts {
    <div class="toolbar"><partial name='_PartialDatatables' /></div>
    <partial name="_ValidationScriptsPartial" />
}
<script>
    //ACTIONS ICONS
    function clickConsulta(x) {
        var url = "ConsultarClasseExames?id=" + x.id;
        window.open(url, "_self")
    }
    function clickAlterar(x) { //OK
        window.location.href = '@Url.Action("AlterarClasseExames", "ClasseExames")?id=' + x.id;
    }
    function clickDelete(x) {
        //"x" é a linha toda da tag (tem que passar a linha TODA de "x")
        //x.id é somente o "id" na tag da linha
        return clickConfirm(x, null, "Excluir folha de exame?", null, "ExcluirClasseExames");
    };
</script>