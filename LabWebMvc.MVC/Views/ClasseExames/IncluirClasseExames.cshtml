                    $("#nomeAss1").val(fileName);
                    $("#caminhoImgAss1").val(path);
                    //mostra a imagem no formulário
                    $("#imgsAss1").fadeIn("fast").html("<img src='" + objURL + "' style='width:300px; height:215px;' />");
