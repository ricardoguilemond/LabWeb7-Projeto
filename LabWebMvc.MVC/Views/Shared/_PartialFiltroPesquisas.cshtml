@using LabWebMvc.MVC.ViewModel
@using static BLL.UtilBLL
@model vmFiltroPesquisas
<div class="lengthMenu" style="display: block; margin-left: 20%; margin-bottom: -50px !important;">
    <div class="form-group">
        <table cellpadding="0" cellspacing="0" width="100%">
            <tr>
                <td style="display: inline-flex; padding-left: 160px;">
                    <span style="font: normal 15px calibri, arial, sans-serif; padding-top: 7px;">Filtrar:&nbsp;&nbsp;</span>
                    @using (Html.BeginForm(PartialFiltro.Action, PartialFiltro.Controller, null, FormMethod.Get))
                    {
                        @Html.TextBoxFor(m => m.Conteudo, new { @class="myField",
                                                                id="Conteudo",
                                                                type="text",
                                                                placeholder="Filtrar qualquer informação ou deixar vazio aqui para exibir todos",
                                                                autofocus="autofocus",
                                                                style="display:inline-block; width:500px; margin-top:1px; padding-left: 4px; border: 1px solid #69c38a; border-radius:6px;"
                    })
                        <button id="clickSubmit" type="submit" class="btn btn-success btn-sm" style="display: inline-block;"><i class="fa-sharp fa-solid fa-magnifying-glass"></i>Pesquisar</button>
                    }
                </td>
            </tr>
        </table>
    </div>
</div>
